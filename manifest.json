{

  "manifest_version": 2,
  "name": "Open video in mpv-android",
  "version": "3.0.0",
  "description": "Open HTML5 videos on Android with mpv",

  "applications": {
    "gecko": {
      "id": "android.external.player.plus@derberg"
    }
  },

  "permissions": [
    "activeTab",
    "<all_urls>"
  ],

  "browser_action": {
    "default_icon": "external-video-player.svg",
    "default_title": "â–¶ mpv intent"
  },

  "background" : {
    "scripts" : ["background.js"]
  }

}
